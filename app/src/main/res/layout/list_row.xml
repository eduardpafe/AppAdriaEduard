<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="61dp">

        <ImageView
            android:id="@+id/list_row_image"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/list_row_title"
            android:layout_width="218dp"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/list_row_image"
            android:layout_toEndOf="@+id/list_row_image"
            android:text="TextView"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="27dp" />

        <TextView
            android:id="@+id/list_row_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/list_row_title"
            android:layout_toEndOf="@+id/list_row_image"
            android:text="TextView" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>